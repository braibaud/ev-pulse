{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Car",
    "type": "object",
    "properties": {
        "make": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "year": {
            "type": "integer"
        },
        "range": {
            "type": "number"
        },
        "battery_capacity": {
            "type": "number"
        },
        "price": {
            "type": "number"
        },
        "features": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "characteristics": {
            "type": "object",
            "properties": {
                "horsepower": {
                    "type": "number"
                },
                "torque": {
                    "type": "number"
                },
                "top_speed": {
                    "type": "number"
                },
                "acceleration_0_60": {
                    "type": "number"
                }
            }
        },
        "photos": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "description": {
            "type": "string"
        }
    },
    "required": [
        "make",
        "model",
        "year",
        "range",
        "battery_capacity",
        "price"
    ]
}